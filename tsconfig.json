{
  "compilerOptions": {
    "outDir": "lib",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "module": "es2015",
    "target": "es5",
    "lib": ["es7", "dom"],
    "sourceMap": false,
    "allowJs": false,
    "strict": true,
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "Types": ["./types"],
      "@/*": ["src/*"],
      "Utils": ["src/utils"],
      "Utils/*": ["src/utils/*"],
      "Store": ["src/store"],
      "Store/*": ["src/store/*"],
      "Router": ["src/router"],
      "Router/*": ["src/router/*"],
      "Models": ["src/models"],
      "Models/*": ["src/models/*"],
      "Shared": ["src/shared"],
      "Shared/*": ["src/shared/*"],
      "Components": ["src/components"],
      "Components/*": ["src/components/*"],
      "Actions": ["src/store/actions"],
      "Actions/*": ["src/store/actions/*"],
      "ActionTypes": ["src/store/actionTypes"]
    },
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "types",
    "src"
  ]
}
