*,
*::before,
*::after
  box-sizing border-box
  outline none
  padding 0
  margin 0

a
  text-decoration inherit
  color inherit

button,
textarea,
input
  background-color transparent
  font-family inherit
  font-size inherit
  color inherit
  border: none

html,
body
  font-family Roboto, Noto sans, Noto, sans-serif
  color rgba(#000, .87)
  min-height: 500px
  min-width 1000px
  font-size 16px
  height 100%
  width 100%
