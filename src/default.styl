@import '~variables.styl'

*,
*::before,
*::after
  box-sizing border-box
  padding 0
  margin 0

a
  text-decoration inherit
  color inherit

button,
textarea,
select,
input
  background-color transparent
  font-family inherit
  font-weight inherit
  font-size inherit
  color inherit
  outline none
  border none

html
  font-family $font-family
  font-size $font-size
  min-height 100vh
  color $black
  width 100%
