.avg-rating
  padding-left: 45px
  flex-shrink: 0
  width: 100%

  &__title
    font-weight: 400
    font-size: 14px

  &__info
    align-items: flex-end
    margin: 2px 0 6px
    display: flex

    .rating-number
      margin-right: 4px
      line-height: 18px
      color: #eb6e00
      font-weight: 500
      font-size: 16px

    .reviews-count
      color: rgba(#000, .54)
      line-height: 17px
      font-weight: 400
      margin-left: 4px
      font-size: 12px