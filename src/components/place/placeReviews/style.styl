.comments

  &__title
    padding: 4px 0 12px 30px
    font-weight: 400
    font-size: 16px

  &__reviews
    list-style: none

    .review
      display: block
      margin: 10px 0

      &__author
        margin-bottom: 2px
        font-weight: 500
        color: #2196f3
        font-size: 13px
        display: block

        &:hover
          text-decoration: underline

      &__text
        color: rgba(#000, .87)
        font-weight: 400
        font-size: 12px
        display: block
