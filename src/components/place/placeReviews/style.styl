.reviews
  transition: .5s cubic-bezier(.25, .93, .5, .98)
  flex-direction: column
  padding: 10px 0 0
  max-height: 100%
  overflow: hidden
  flex-shrink: 0
  display: flex
  flex-grow: 1
  width: 100%

  &--active
    margin-left: 0

  &__title
    align-items: center
    margin-bottom: 8px
    padding-left: 45px
    flex-shrink: 0
    display: flex
    height: 40px

    h3
      line-height: 19px
      font-weight: 400
      font-size: 16px

  &__list
    border-top: 1px solid #ddd
    flex-direction: column
    display: flex
    flex-grow: 1
  
    ul
      height: calc(100% - 40px)
      list-style: none
      overflow-y: auto
      padding: 0 15px

      @media only screen and (max-width: $mobile)
        padding: 0 30px
