@import url('placeReview/style')

.reviews
  max-height: 100%
  overflow: hidden
  padding: 10px 0 0

  &__title
    justify-content: center
    margin-bottom: 4px
    flex-flow: column
    display: flex
    height: 40px

    h3
      padding-left: 45px
      line-height: 19px
      font-weight: 400
      font-size: 16px

  &__list
    height: calc(100% - 40px)
    list-style: none
    overflow-y: auto
    padding: 0 15px
