.rating
  flex-flow: row-reverse
  cursor: pointer
  font-size: 16px
  display: flex
  height: 16px

  .star
    position: relative
    line-height: 1em
    color: #eb6e00
    font-size: 1em

    &::before
      content: '☆'

    &:hover,
    &.active

      &::before
        content: '★'

      & ~ .star::before
        content: '★'

    