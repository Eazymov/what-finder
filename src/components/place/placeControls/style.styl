.controls
  pointer-events: none
  position: absolute
  overflow: hidden
  height: 40px
  width: 100%
  z-index: 10
  top: 10px
  left: 0

  button
    border: 1px solid #2196F3
    transition: .2s ease-out
    background-color: #fff
    color: rgba(#000, .54)
    pointer-events: auto
    position: absolute
    text-align: center
    cursor: pointer
    font-size: 24px
    display: block
    margin: 4px 0
    height: 32px
    width: 36px

  &__show-reviews-btn
    border-radius: 14px 0 0 14px
    line-height: 35px
    padding-left: 3px
    right: -40px

    &:hover
      transform: scale(1.1)

    &.active
      right: 0

  &__show-info-btn
    border-radius: 0 14px 14px 0
    padding-right: 3px
    left: -40px

    &:hover
      transform: scale(1.1)

    &.active
      left: 0
