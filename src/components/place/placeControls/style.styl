.controls
  pointer-events: none
  position: absolute
  overflow: hidden
  height: 40px
  width: 100%
  top: 10px
  left: 0

  button
    transition: .2s ease-out
    background-color: #fff
    color: rgba(#000, .54)
    pointer-events: auto
    position: absolute
    text-align: center
    cursor: pointer
    font-size: 24px
    display: block
    margin: 4px 0
    border: none
    height: 32px
    width: 36px

  &__show-reviews-btn
    box-shadow: -1px 0 5px rgba(#000, .5)
    border-radius: 15px 0 0 15px
    line-height: 35px
    padding-left: 3px
    right: -40px

    &:hover
      box-shadow: -3px 0 13px rgba(#000, .3)

    &.active
      right: 0

  &__show-info-btn
    box-shadow: 1px 0 5px rgba(#000, .5)
    border-radius: 0 15px 15px 0
    padding-right: 3px
    left: -40px

    &:hover
      box-shadow: 3px 0 13px rgba(#000, .3)

    &.active
      left: 0
