@import './placeHours/style'
@import './placePhotos/style'
@import './placeTags/style'

.info
  padding: 10px 15px 0

  &__title
    justify-content: center
    margin-bottom: 4px
    flex-flow: column
    min-height: 40px
    display: flex

    h3
      padding-right: 30px
      line-height: 19px
      font-weight: 400
      font-size: 16px

  &__phone
    border-top: 1px solid #d7d7d7
    align-items: center
    padding: 8px 0
    display: flex

    i
      color: rgba(#000, .54)
      margin-right: 4px
      font-size: 20px

    h3
      display: inline-block
      margin-right: 4px
      line-height: 19px
      font-weight: 500
      font-size: 14px

    span
      line-height: 19px
      font-weight: 400
      font-size: 14px
