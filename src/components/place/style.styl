.place__container
  justify-content: center
  align-items: center
  position: relative
  flex-flow: column
  overflow: hidden
  transition: .3s ease-out
  flex-shrink: 0
  display: flex
  flex-grow: 1
  height: 60vh

  @media only screen and (max-width: $mobile)
    margin-bottom: calc(60px - 60vh)
    border-top: 1px solid #d7d7d7

    &.active
      margin-bottom: 0

.place
  overflow: hidden
  display: flex
  flex-grow: 1
  width: 100%
  height: 40vh
