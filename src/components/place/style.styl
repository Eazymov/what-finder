@import url('placeControls/style')
@import url('placeInfo/style')
@import url('placeReviews/style')

.place
  max-height: calc(100vh - 104px)
  position: relative
  overflow-x: hidden
  overflow-y: auto
  display: flex
  flex-grow: 1
  width: 100%

  .page
    transition: .5s cubic-bezier(.25, .93, .5, .98)
    flex-shrink: 0
    width: 100%
