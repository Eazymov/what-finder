.toolbar
  box-shadow 0 1px 3px rgba(#000, .5)
  transition-duration .3s
  transition-timing-function ease-out
  margin-top -160px
  flex-shrink: 0
  font-size 14px
  height: 214px
  z-index: 4
  &.expanded
    margin-top 0

  ul
    height: 160px

    li
      border-bottom 1px solid #ddd
      background-repeat no-repeat
      justify-content center
      color rgba(#000, .87)
      background-color #fff
      background-size cover
      align-items center
      line-height: 39px
      text-align center
      font-weight 400
      cursor pointer
      transition .2s
      height: 40px
      display flex
      &:hover
        background-color #f5f5f5
        color #2196F3
      .icon
        display inline-block
        margin-right 10px
        height 20px
        width 20px
