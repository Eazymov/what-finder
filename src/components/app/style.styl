#App
  display flex

.md-button
  box-shadow: 0 1px 2px rgba(#000, .3)
  text-transform uppercase
  vertical-align middle
  border-radius 2px
  text-align center
  line-height 36px
  letter-spacing 0
  font-weight 500
  font-size 14px
  cursor pointer
  padding 0 16px
  transition .2s
  &:hover
    box-shadow 0 2px 7px rgba(#000, .3)
