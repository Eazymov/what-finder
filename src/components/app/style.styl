#root
  min-height: 500px
  min-width 375px
  height 100vh
  width 100%

.App
  display flex
  height: 100%

  @media only screen and (max-width: $mobile) {
    flex-flow: column
  }

  &-sidebar
    box-shadow 1px 0 3px rgba(#000, .3)
    border-right 1px solid #2196F3
    flex-flow: column
    min-width 320px
    max-width 380px
    min-height 100%
    display: flex
    flex-grow 0
    width 25vw
    z-index 5
