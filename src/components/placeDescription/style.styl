.place
  padding: 12px 16px
  overflow-y: auto

  &__title
    font-weight: 400
    font-size: 16px
  
  &__photos
    justify-content: space-between
    flex-flow: row wrap
    display: flex
    
    .photo
      box-shadow: 0 1px 3px rgba(#000, .5)
      justify-content: center
      align-items: center
      border-radius: 2px
      position: relative
      overflow: hidden
      cursor: pointer
      margin-top: 2%
      display: flex
      height: 80px
      width: 32%
      &::before
        background-color: rgba(#000, .2)
        position: absolute
        transition: .9s
        height: 100%
        width: 100%
        content: ''
        z-index: 1

      &:hover

        &::before
          opacity: 0

        img
          transform: scale(1.1)

      img
        min-height: 100%
        min-width: 100%
        transition: .3s
        z-index: 0
