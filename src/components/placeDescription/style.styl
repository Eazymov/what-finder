.place
  padding: 10px 15px
  overflow-y: hidden

  &__title
    font-weight: 400
    font-size: 16px
    padding: 8px 0

  &__phone
    border-top: 1px solid #d7d7d7
    align-items: center
    padding: 8px 0
    display: flex

    i
      color: rgba(#000, .54)
      margin-right: 4px
      font-size: 20px

    h3
      display: inline-block
      margin-right: 4px
      font-weight: 500
      font-size: 14px

    span
      font-weight: 400
      font-size: 14px
