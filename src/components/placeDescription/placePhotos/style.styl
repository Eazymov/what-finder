.photos

  &__list
    border-top: 1px solid #d7d7d7
    justify-content: space-between
    transition: .3s ease-out
    flex-flow: row wrap
    overflow-y: hidden
    position: relative
    max-height: 115px
    display: flex
    z-index: 0

    &.expanded
      max-height: 400px

      &::before
        top: 25%

    &::before
      background-image: linear-gradient(to top, #fff 0.1%, transparent 25%)
      pointer-events: none
      position: absolute
      transition: .3s
      height: 100%
      width: 100%
      content: ''
      z-index: 2
      left: 0
      top: 0
    
    &__photo
      box-shadow: 0 1px 3px rgba(#000, .5)
      justify-content: center
      align-items: center
      border-radius: 2px
      position: relative
      min-height: 54px
      overflow: hidden
      cursor: pointer
      margin-top: 2%
      display: flex
      height: 4.5vw
      width: 32%

      img
        min-height: 100%
        min-width: 100%
        transition: .3s
        z-index: 0

  &__actions
    display: flex
    padding: 5px
    width: 100%
    justify-content: center
    
    .toggle-btn
      align-self: flex-end
      color: #2196f3
      font-weight: 500
      font-size: 14px
      cursor: pointer
      transition: .2s

      &:hover
        color: #1E88E5